{% if tag is defined %}
image:
  chat_history:
    tag: "{{ tag }}"
{% endif %}
    repository: {{ registry }}

{% if use_alternate_tagging is defined %}
alternateTagging: {{ use_alternate_tagging }}
{% endif %}

{% if tdxEnabled is defined and tdxEnabled %}
tdx:
  common:
    kbsAddress: {{ KBS_ADDRESS }}
{% endif %}

mongodb:
  auth:
    usernames:
      - {{ chat_history.mongo.auth.user.db_user }}
    passwords:
      - {{ MONGO_DB_PASSWORD }}
    databases:
      - {{ chat_history.mongo.auth.db_name }}
    rootPassword: {{ MONGO_ADMIN_PASSWORD }}
{% if tdxEnabled is defined and tdxEnabled %}
  podAnnotations:
    io.katacontainers.config.hypervisor.kernel_params: "agent.guest_components_rest_api=all agent.aa_kbc_params=cc_kbc::{{ KBS_ADDRESS }}"
{% endif %}
{% if chat_history.additional_values is defined %}
{{ chat_history.additional_values | to_nice_yaml }}
{% endif %}
