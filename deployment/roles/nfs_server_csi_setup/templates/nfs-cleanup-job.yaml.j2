apiVersion: batch/v1
kind: Job
metadata:
  name: nfs-cleanup
  namespace: {{ nfs_namespace }}
spec:
  template:
    spec:
      nodeSelector:
        nfs-node: "true"
      restartPolicy: OnFailure
      containers:
        - name: cleanup-nfs-dir
          image: alpine:3.18
          securityContext:
            privileged: true
          command: ["/bin/sh", "-c"]
          args:
            - rm -rf {{ nfs_host_path }}/data
          volumeMounts:
            - name: nfs-data
              mountPath: {{ nfs_host_path }}
      volumes:
        - name: nfs-data
          hostPath:
            path: {{ nfs_host_path }}
            type: DirectoryOrCreate
