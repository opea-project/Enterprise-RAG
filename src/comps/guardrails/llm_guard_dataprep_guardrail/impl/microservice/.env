## LLM Guard Dataprep Guardrail Microservice Settings
## Singular dataprep scanners settings

## BanSubstrings scanner settings
BAN_SUBSTRINGS_ENABLED=false
BAN_SUBSTRINGS_SUBSTRINGS="backdoor,malware,virus"
BAN_SUBSTRINGS_MATCH_TYPE="str"
BAN_SUBSTRINGS_CASE_SENSITIVE=false
BAN_SUBSTRINGS_CONTAINS_ALL=false

## BanTopics scanner settings
BAN_TOPICS_ENABLED=false
BAN_TOPICS_USE_ONNX=false
BAN_TOPICS_TOPICS="violence,attack,war"
BAN_TOPICS_THRESHOLD=0.5
BAN_TOPICS_MODEL

## Code scanner settings
CODE_ENABLED=false
CODE_USE_ONNX=false
CODE_LANGUAGES="Java,Python"
CODE_MODEL
CODE_IS_BLOCKED
CODE_THRESHOLD=0.5

## Invisible Text scanner settings
INVISIBLETEXT_ENABLED=false

## Prompt Injection scanner settings
PROMPT_INJECTION_ENABLED=false
PROMPT_INJECTION_USE_ONNX=false
PROMPT_INJECTION_MODEL
PROMPT_INJECTION_THRESHOLD=0.92
PROMPT_INJECTION_MATCH_TYPE="full"

## Regex scanner settings
REGEX_ENABLED=false
REGEX_PATTERNS="Bearer [A-Za-z0-9-._~+/]+"
REGEX_IS_BLOCKED=true
REGEX_MATCH_TYPE="all"

## Secrets scanner settings
SECRETS_ENABLED=false

## Sentiment scanner settings
SENTIMENT_ENABLED=true
SENTIMENT_THRESHOLD=-0.3
SENTIMENT_LEXICON

## TokenLimit scanner settings
TOKEN_LIMIT_ENABLED=false
TOKEN_LIMIT_LIMIT=4096
TOKEN_LIMIT_ENCODING_NAME="cl100k_base"
TOKEN_LIMIT_MODEL_NAME

## Toxicity scanner settings
TOXICITY_ENABLED=false
TOXICITY_USE_ONNX=false
TOXICITY_MODEL
TOXICITY_THRESHOLD=0.5
TOXICITY_MATCH_TYPE="full"

