FROM vault.habana.ai/gaudi-docker/1.19.0/ubuntu22.04/habanalabs/pytorch-installer-2.5.1:latest

ENV LANG=en_US.UTF-8

# create user and folders
RUN useradd -u 1000 -m -s /bin/bash user
USER user
ENV PATH="$PATH:/home/user/.local/bin"
WORKDIR /home/user/

ENV VLLM_TARGET_DEVICE="hpu"
RUN pip install --upgrade-strategy eager optimum[habana] --extra-index-url https://download.pytorch.org/whl/cpu
RUN pip install -v git+https://github.com/HabanaAI/vllm-fork.git@v0.6.4.post2+Gaudi-1.19.0 --extra-index-url https://download.pytorch.org/whl/cpu
RUN pip install triton==3.1.0 --ignore-installed

CMD ["/bin/bash"]
